<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.CoursesManagementActivity">

    <ScrollView
        android:id="@+id/scrollview_ecran"
        style="@android:style/Widget.Material.Light.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alwaysDrawnWithCache="true"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:clipChildren="false"
        android:fadeScrollbars="true"
        android:fadingEdge="horizontal|vertical"
        android:scrollbarStyle="insideOverlay"
        android:visibility="visible" tools:targetApi="lollipop">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/moniteur_titre_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:text="Moniteur"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider"
                />

            <TextView
                android:id="@+id/nom_moniteur_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:shadowColor="@color/colorAccent"
                android:text="Nom du moniteur :"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="45dp"
                    android:layout_marginStart="45dp"
                    android:inputType="text"
                    android:lines="1"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/sujet_cours_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:shadowColor="@color/colorAccent"
                android:text="Sujet du cours :"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="45dp"
                    android:layout_marginStart="45dp"
                    android:inputType="text"
                    android:lines="1"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/type_cours_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:shadowColor="@color/colorAccent"
                android:text="Niveau de plongée effectif :"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

            <Spinner
                android:id="@+id/type_cours_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="200dp"
                android:layout_marginStart="70dp"
                android:fadeScrollbars="true"
                android:minHeight="30dp"
                android:visibility="visible"/>


            <TextView
                android:id="@+id/eleves_titre_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:text="Apprenants"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider"
                />

            <TextView
                android:id="@+id/niveau_plongee_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:shadowColor="@color/colorAccent"
                android:text="Niveau de plongée"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

